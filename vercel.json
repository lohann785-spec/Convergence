{
  "buildCommand": "prisma generate && next build",
  "regions": ["cdg1"],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NEXTAUTH_URL": "@nextauth_url",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "DATABASE_URL": "@database_url",
    "DATABASE_URL_UNPOOLED": "@database_url_unpooled",
    "OPENAI_API_KEY": "@openai_api_key",
    "OPENAI_MODEL": "gpt-4"
  }
}
